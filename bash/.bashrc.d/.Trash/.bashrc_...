#####################
###   FUNCTIONS   ###
#####################
	function mkdircd() { mkdir -p "$@" && eval cd "\"\$$#\""; }
	function cdu() {
		if [[ $# -eq 0 ]]; then
			cd ..
			return
		fi
		for ((i=0 ; i <= $# ; i++)); do
			cd ..
		done
	}
	function f() {
		fff "$@"
		cd "$(cat "${XDG_CACHE_HOME:=${HOME}/.cache}/fff/.fff_d")"
	}
